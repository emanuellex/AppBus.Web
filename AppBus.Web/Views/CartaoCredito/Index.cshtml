@model List<CartaoCredito>

    @{
        ViewData["Title"] = "Cartões de crédito";
    }

    <h1>Cartões de crédito cadastrados</h1>

    <table class="table table-striped">
        <tr>
            <th>Número</th>
            <th>Titular</th>
            <th>CPF</th>
            <th>CVV</th>
            <th>Validade</th>
            <td>Bandeira</td>
        </tr>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.NumeroCartao</td>
                <td>@c.NomeTitular</td>
                <td>@c.Documento</td>
                <td>@c.CVV</td>
                <td>@c.Validade</td>
                <td>@c.Bandeira</td>
                <td>
                <a asp-action="editar" class="btn btn-outline-secondary"
               asp-route-id="@c.CartaoCreditoId">Editar</a>
                <button onclick="UsuarioId.value = @c.CartaoCreditoId" type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Excluir
                </button>
                </td>
            </tr>
        }
    </table>
